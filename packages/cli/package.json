{
  "name": "relno-cli",
  "version": "0.1.0",
  "description": "CLI for relno",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/cli.js",
  "files": [
    "dist",
    "bin"
  ],
  "author": "ppodds",
  "license": "MIT",
  "module": "CommonJS",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc",
    "format": "prettier --write {src,__tests__}/**/*.ts",
    "format-check": "prettier --check {src,__tests__}/**/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "lint-staged": "lint-staged",
    "test": "jest"
  },
  "repository": "ppodds/relno",
  "keywords": [
    "node",
    "release",
    "release note"
  ],
  "packageManager": "pnpm@8.7.1",
  "dependencies": {
    "commander": "^11.0.0",
    "relno": "workspace:^"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/node": "^18.17.14",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "__tests__/**/*.ts": [
      "prettier --write"
    ]
  }
}
