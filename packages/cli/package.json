{
  "name": "relno-cli",
  "version": "0.1.0",
  "description": "CLI for relno",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/cli.js",
  "files": [
    "dist",
    "bin"
  ],
  "author": "ppodds",
  "license": "MIT",
  "module": "CommonJS",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc",
    "format": "prettier --write {src,__tests__}/**/*.ts",
    "format-check": "prettier --check {src,__tests__}/**/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "lint-staged": "lint-staged",
    "test": "jest"
  },
  "repository": "ppodds/relno",
  "keywords": [
    "node",
    "release",
    "release note"
  ],
  "packageManager": "pnpm@8.7.1",
  "dependencies": {
    "commander": "^11.1.0",
    "relno": "workspace:^"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "__tests__/**/*.ts": [
      "prettier --write"
    ]
  }
}
