{
  "name": "relno",
  "version": "0.1.0",
  "description": "A fully configurable release note generation framework. Allow you to automatically generate a beautiful release note from commit messages and pull requests.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "ppodds",
  "license": "MIT",
  "module": "CommonJS",
  "scripts": {
    "grammar": "ts-node src/generate-parser.ts",
    "clean": "rimraf lib",
    "build": "pnpm clean && pnpm grammar && tsc",
    "format": "prettier --write {src,__tests__}/**/*.ts",
    "format-check": "prettier --check {src,__tests__}/**/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "lint-staged": "lint-staged",
    "test": "jest"
  },
  "repository": "ppodds/relno",
  "keywords": [
    "node",
    "release",
    "release note"
  ],
  "packageManager": "pnpm@8.7.1",
  "dependencies": {
    "date-and-time": "^3.0.2",
    "peggy": "^3.0.2",
    "simple-git": "^3.19.1",
    "ts-pegjs": "^4.2.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.4",
    "@types/node": "^18.17.14",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "__tests__/**/*.ts": [
      "prettier --write"
    ]
  }
}
